@model AddStoryModel
@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Add a Story</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-antiforgery="true" asp-action="Create"
    asp-area="Admin" asp-controller="Story" method="post">
        <div class="card-body">
            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="Title" class="mb-1">Story title</label>
                    <input type="text" class="form-control" asp-for="Title" placeholder="Enter the Title">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Genre" class="mb-1">Genre</label>
                    <input type="text" class="form-control" asp-for="Genre" placeholder="Genre">
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="form-group col-md-4">
                    <label asp-for="Author" class="mb-1">Author</label>
                    <input type="text" class="form-control" asp-for="Author" placeholder="Author name">
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Origin" class="mb-1">Origin literature</label>
                    <input type="text" class="form-control" asp-for="Origin" placeholder="Enter the Origin literature">
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Length" class="mb-1">Story length</label>
                    <input type="text" class="form-control" asp-for="Length" placeholder="Enter the Length">
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="Rating" class="mb-1">Rating</label>
                    <input type="text" class="form-control" asp-for="Rating" placeholder="Enter the rating">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="AiringDate" class="mb-1">Aired on</label>
                    <input type="date" class="form-control" asp-for="AiringDate" placeholder="Enter the Title">
                </div>
            </div>
            
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </form>
</div>
